          script.
            //calculate price
            function calprice() {
              var type = $("#price-type").val();
              var fabric = $("#price-fabric").val();
              var amount = parseInt($("#price-amount").val());
              var colorfront = parseInt($("#price-color-front").val());
              var colorback = parseInt($("#price-color-back").val());
              var colorright = parseInt($("#price-color-right").val());
              var colorleft = parseInt($("#price-color-left").val());
              var price = 0;
              if (amount <= 30) {
                /*if (amount<3) {
                price = 250;
                } else if (amount<10) {
                price = 210;
                } else if (amount<=30) {
                price = 185;
                }
                if (colorfront>0) price+=50;
                if (colorback>0) price+=50;
                if (colorright>0) price+=50;
                if (colorleft>0) price+=50;*/
                price = 900000;
              } else {
                if (type == "tshirt") {
                  if (fabric == "cotton") {
                    if (amount <= 30) price = 900000;
                    else if (amount <= 69) price = 120;
                    else if (amount <= 99) price = 110;
                    else if (amount <= 200) price = 95;
                    else if (amount <= 400) price = 90;
                    else if (amount <= 600) price = 85;
                    else if (amount <= 700) price = 75;
                    else price = 65;
                  } else if (fabric == "TC" || fabric == "TK" || fabric == "TCbright" || fabric == "TCdark") {
                    //if (amount<=70) price=100;
                    if (amount <= 99) price = 900000;
                    else if (amount <= 200) price = 85;
                    else if (amount <= 400) price = 80;
                    else if (amount <= 600) price = 75;
                    else if (amount <= 700) price = 65;
                    else price = 55;
                  } else if (fabric == "supersoff") {
                    if (amount <= 99) price = 900000;
                    else if (amount <= 200) price = 140;
                    else if (amount <= 400) price = 135;
                    else if (amount <= 600) price = 130;
                    else if (amount <= 700) price = 115;
                    else price = 105;
                  }
                  var allcolor = colorfront + colorback + colorright + colorleft - 1;
                  if (allcolor < 0) allcolor = 0;
                  price += allcolor * 5;
                  //block price
                  if (amount < 100) {
                    price += (300 * allcolor) / amount;
                  }
                } else if (type == "polo") {
                  if (fabric == "TCbright") {
                    if (amount <= 99) price = 135;
                    else if (amount <= 200) price = 130;
                    else if (amount <= 400) price = 120;
                    else if (amount <= 600) price = 115;
                    else if (amount <= 700) price = 105;
                    else price = 95;
                  } else if (fabric == "TCdark") {
                    if (amount <= 99) price = 155;
                    else if (amount <= 200) price = 150;
                    else if (amount <= 400) price = 130;
                    else if (amount <= 600) price = 125;
                    else if (amount <= 700) price = 115;
                    else price = 105;
                  } else if (fabric == "TK") {
                    if (amount <= 99) price = 120;
                    else if (amount <= 200) price = 115;
                    else if (amount <= 400) price = 105;
                    else if (amount <= 600) price = 95;
                    else if (amount <= 700) price = 90;
                    else price = 75;
                  } else if (fabric == "cotton") {
                    alert("ผ้าประเภท cotton สำหรับเสื้อยืดเท่านั้นค่ะ");
                  } else if (fabric == "TC") {
                    alert("ผ้าประเภท TC สำหรับเสื้อโปโล สีอ่อนและสีเข้มราคาไม่เท่ากัน กรุณาเลือกว่าท่านต้องการสีอ่อนหรือสีเข้มด้วยค่ะ");
                  }
                }
              }
              price = parseFloat(price).toFixed(2);
              if (price < 100000) {
                //$("#pricelabel").html(price);
                var priceresup =
                  $("#price-type option:selected").html() +
                  " ผ้า " + $("#price-fabric option:selected").html() + "<br>" +
                  " จำนวน " + amount + " ตัว";
                if (type == "tshirt") {
                  priceresup += "<br>" +
                    "สกรีนด้านหน้า " + colorfront + "<br>" +
                    "สกรีนด้านหลัง " + colorback
                }
                $("#priceres-up").html(priceresup);
                $("#priceres-center").html(price + " บาท/ตัว");
                $("#priceres-error").hide();
                $("#priceres").fadeIn(200);
              } else {
                $("#priceres-up").html("");
                $("#priceres-center").html("");
                $("#priceres-error").show();
                $("#priceres").fadeIn(200);
              }
            }
            //calprice();
            function shirttypechange() {
              //console.log($("#price-type").val());
              if ($("#price-type").val() == "tshirt") {
                $("#price-fabric").removeClass("fabric-polo");
                $("#price-fabric").addClass("fabric-tshirt");
                $("#price-fabric").val("cotton");
                $(".price-color").show();
              } else if ($("#price-type").val() == "polo") {
                $("#price-fabric").addClass("fabric-polo");
                $("#price-fabric").removeClass("fabric-tshirt");
                $("#price-fabric").val("TCbright");
                $(".price-color").hide();
              }
            }
            setInterval(function() {
              if (isNaN(parseInt($("#price-amount").val()))) $("#price-amount").val(0);
              if (isNaN(parseInt($("#price-color-front").val()))) $("#price-color-front").val(0);
              if (isNaN(parseInt($("#price-color-back").val()))) $("#price-color-back").val(0);
              if (isNaN(parseInt($("#price-color-left").val()))) $("#price-color-left").val(0);
              if (isNaN(parseInt($("#price-color-right").val()))) $("#price-color-right").val(0);
            }, 100);
